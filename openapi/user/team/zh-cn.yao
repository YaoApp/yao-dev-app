{
  "type": "free", // 新团队的默认订阅类型
  "role": "owner:free", // 团队创建者的默认用户角色（与用户注册角色一致）
  "roles": [
    {
      "role_id": "owner:free",
      "label": "所有者",
      "description": "团队所有者，拥有对团队资源和设置的完全控制权",
      "default": false,
      "hidden": true
    },
    {
      "role_id": "team:admin",
      "label": "管理员",
      "description": "可管理团队成员、分配角色和配置团队设置",
      "default": false,
      "hidden": false
    },
    {
      "role_id": "team:member",
      "label": "成员",
      "description": "可访问团队资源并与其他团队成员协作",
      "default": true,
      "hidden": false
    }
  ],

  // AI 成员（机器人）配置
  "robot": {
    "roles": ["team:member", "team:admin"], // AI 成员可用的角色

    // AI 成员使用的智能体配置
    "agents": {
      "executor": "members.robot", // 负责执行任务和处理工作逻辑的智能体
      "planner": "members.mind", // 负责自主思考和规划工作内容的智能体
      "profiler": "members.profile" // 负责生成和优化成员身份设定的智能体
    },

    // AI 成员的邮箱域名配置
    "email_domains": [
      {
        "name": "机器人邮箱", // 此配置的显示名称
        "messenger": "robot",
        "domain": "robot.yaobots.com",
        "prefix_min_length": 6, // 邮箱前缀最小长度
        "prefix_max_length": 20, // 邮箱前缀最大长度
        "reserved_words": ["robot", "yaobots", "/^robot/"], // 保留/受保护的关键词
        "whitelist": {
          "domains": ["yaobots.com"],
          "senders": ["robot@yaobots.com"],
          "ips": ["0.0.0.0/0"]
        }
      },
      {
        "name": "员工邮箱", // 此配置的显示名称
        "messenger": "staff",
        "domain": "staff.yaobots.com",
        "prefix_min_length": 6,
        "prefix_max_length": 20,
        "reserved_words": ["admin", "staff", "support", "/^team/"],
        "whitelist": {
          "domains": ["staff.yaobots.com"],
          "senders": ["staff@yaobots.com"],
          "ips": ["0.0.0.0/0"]
        }
      }
    ],

    // AI 成员的默认设置
    "defaults": {
      "llm": "gpt-4-turbo", // 默认语言模型（LLM 列表由系统 API 提供）
      "autonomous_mode": true, // 是否默认开启自主模式
      "cost_limit": 100 // 默认每日消费限额（美元）
    }
  },

  // Invite config
  "invite": {
    "channel": "default",
    "expiry": "1d", // 邀请链接有效期: 8h, 1d, 20m 等
    "base_url": "http://localhost:8000/__yao_admin_root/team/invite", // 邀请链接的基础URL（空表示使用当前域名）
    "templates": {
      "mail": "zh-cn.invite_member", // 邮件模板
      "sms": "zh-cn.invite_member" // 短信模板
    }
  }
}
