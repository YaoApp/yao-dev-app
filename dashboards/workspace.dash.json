{
  "name": "工作台",
  "action": {
    "before:data": "scripts.stat.BeforeData",
    "data": { "process": "scripts.stat.Data", "default": ["2022-09-20"] },
    "after:data": "scripts.stat.AfterData"
  },
  "layout": {
    "actions": [
      {
        "title": "跳转至大屏",
        "icon": "icon-airplay",
        "action": [
          {
            "name": "historyPush",
            "type": "Common.historyPush",
            "payload": {
              "pathname": "/x/Cool/demo",
              "search": { "a": 123, "b": true }
            }
          }
        ]
      }
    ],
    "filter": {
      "columns": [
        { "name": "时间区间", "width": 6 },
        { "name": "状态", "width": 6 }
      ]
    },
    "dashboard": {
      "columns": [
        {
          "width": 12,
          "rows": [{ "name": "宠物列表" }, { "name": "图表展示1" }]
        },
        { "name": "宠物表单", "width": 12 },
        { "name": "图表展示2", "width": 24 },
        { "name": "收入", "width": 12 }
      ]
    }
  },
  "fields": {
    "filter": {
      "时间区间": {
        "bind": "range",
        "edit": {
          "type": "TimePicker",
          "props": { "range": true }
        }
      },
      "状态": {
        "bind": "status",
        "edit": {
          "type": "Select",
          "props": {
            "query": {
              "from": "pet",
              "select": ["status", "name"],
              "labelField": "name",
              "valueField": "status",
              "wheres": [{ "column": "id", "op": "ge", "value": 0 }],
              "limit": 2
            }
          }
        }
      }
    },
    "dashboard": {
      "宠物列表": {
        "view": {
          "type": "Table",
          "props": {
            "model": "pet",
            "query": { "status": "cured" },
            "$on:change": {
              "process": "scripts.event.OnChange",
              "query": { "extra": "开发者定义数据" }
            }
          }
        }
      },
      "宠物表单": {
        "view": {
          "type": "Form",
          "props": {
            "model": "pet",
            "query": { "id": "1", "formType": "edit" }
          }
        }
      },
      "图表展示1": {
        "$data": {
          "process": "flows.dashboards.test1",
          "query": { "foo": "bar" }
        },
        "view": {
          "type": "NumberChart",
          "props": {
            "chartHeight": 272,
            "prefix": "¥",
            "decimals": 2,
            "nameKey": "date",
            "valueKey": "value"
          }
        }
      },
      "图表展示2": {
        "$data": {
          "process": "flows.dashboards.test2",
          "query": { "foo": "bar" }
        },
        "view": {
          "type": "LineBar",
          "props": {
            "height": 240,
            "nameKey": "name",
            "axisLabel": { "interval": 0, "fontSize": 12 },
            "series": [
              {
                "valueKey": "stay",
                "type": "line",
                "smooth": true,
                "symbolSize": 8,
                "itemStyle": { "borderRadius": 6 },
                "splitLine": { "show": false },
                "axisLabel": { "show": false }
              },
              {
                "valueKey": "cost",
                "type": "bar",
                "itemStyle": { "borderRadius": 6 },
                "splitLine": { "show": false },
                "axisLabel": { "show": false }
              }
            ]
          }
        }
      },
      "收入": {
        "bind": "income",
        "link": "/x/Table/pet",
        "out": "scripts.stat.Income",
        "view": {
          "type": "NumberChart",
          "props": {
            "chartHeight": 150,
            "prefix": "¥",
            "decimals": 2,
            "nameKey": "date",
            "valueKey": "value"
          }
        }
      }
    }
  }
}
